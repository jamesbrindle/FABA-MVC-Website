@using IR_BackOffice.Models
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    window.onload = function (event) {
        $('#divLatestNews2').css({
            height: document.getElementById("imgFreeBetPic").height
        });

        $('#divBookmakerFeed2').css({
            height: document.getElementById("imgFreeBetPic").height
        });

        $('#divLiveScores').css({
            height: document.getElementById("divBetFeed2").style.height
        });
    };
</script>

<script type="text/javascript">

    window.onresize = function (event) {
        $('#divLatestNews2').css({
            height: document.getElementById("imgFreeBetPic").height
