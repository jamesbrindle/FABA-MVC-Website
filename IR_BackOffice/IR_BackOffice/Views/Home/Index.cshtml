        <div>
            <img src="~/Images/Content/match.jpg" alt="" />
            <br />
            <br />
        </div>
        <div class="row-fluid">
            <div class="span8 feed-header" style="background-color: #3a3d3f; vertical-align: middle;">
                <span style="font-family: Gotham-Medium; color: white;">LATEST BETTING TIPS</span>
            </div>

            <div class="span4 feed-header" style="background-color: #3a3d3f; vertical-align: middle;">
                <span style="font-family: Gotham-Medium; color: white;">LIVE SCORES</span>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span8 view-all-header" style="background-color: white; vertical-align: middle;">
                @{
                    Html.RenderPartial("_TipsFeed");
                }
            </div>
            <div class="span4 view-all-header" style="background-color: white; vertical-align: middle;">
                @{
                    Html.RenderPartial("_LiveScoresFeed");
