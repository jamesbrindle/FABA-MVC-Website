@using System.Data.Entity.Core.Metadata.Edm
@model IR_BackOffice.Models.CreateBookmakerViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "ManageBookmakers", FormMethod.Post, new { @encType = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CreateBookmakersViewModel</legend>

        <div>
            Title
        </div>
        <div>
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div>
            Url
        </div>
        <div>
            @Html.EditorFor(model => model.Url)
            @Html.ValidationMessageFor(model => model.Url)
        </div>

        <div>
            Image<br/><br/>
            When uploading an image for Bookmakers, for best results use a .png image with a transparent background and size roughly: 150px x 20px. For more information visit: <a href="http://www.w3.org/TR/PNG/" style="color: blue; text-decoration: underline">http://www.w3.org/TR/PNG/</a>
            <br/><br />
        </div>
        <input type="file" name="image" />

        <div>
            <br />
            Content
        </div>
        <div>
            @Html.EditorFor(model => model.Text)
            @Html.ValidationMessageFor(model => model.Text)
        </div>

        <div>
            <br />
            Date Added (dd/mm/yy)
        </div>
        <div>
            @Html.EditorFor(model => model.DateAdded)
            @Html.ValidationMessageFor(model => model.DateAdded)
        </div>

        <div>
            Is Live?&nbsp;
            @Html.EditorFor(model => model.IsLive)
            @Html.ValidationMessageFor(model => model.IsLive)
            <br />
            <br />
        </div>
        <input type="submit" value="Create" />
    </fieldset>
}

<div>
    @Html.ActionLink("<< Back to List", "Index", null, new { @Style = "color: blue; text-decoration: underline;" })
    <br />
    <br />
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
