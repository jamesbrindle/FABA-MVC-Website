@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IR_BackOffice.Models.EnquiryModel


<div class="row offset2 span8 hidden-phone" style="font-family: Gotham-Medium; font-size: 10pt; padding-bottom: 30px;">

    @using (Html.BeginForm())
    {
        <br />
        <fieldset>
            <legend style="font-size: 14pt;">CONTACT FORM</legend>
            <div class="offset2" style="color: red;">
                @Html.ValidationSummary()
            </div>
            <ol>
                <li style="list-style: none;">
                    @* @Html.LabelFor(m => m.ContactName)*@
                    @Html.TextBoxFor(m => m.ContactName, new { @placeholder = "Name", @class = "offset2", @style = "width:60%; height: 25px;" })
                </li>
                <li style="list-style: none;">
                    @*@Html.LabelFor(m => m.TelephoneNumber)*@
                    @Html.TextBoxFor(m => m.TelephoneNumber, new { @placeholder = "Telephone Number (optional)", @class = "offset2", @style = "width:60%; height: 25px;" })
                </li>
                <li style="list-style: none;">
                    @*@Html.LabelFor(m => m.EmailAddress)*@
                    @Html.TextBoxFor(m => m.EmailAddress, new { @placeholder = "Email", @class = "offset2", @style = "width:60%; height: 25px;" })
                </li>
                <li style="list-style: none;">
                    @* @Html.LabelFor(m => m.EmailConfirm)*@
                    @Html.TextBoxFor(m => m.EmailConfirm, new { @placeholder = "Confirm Email", @class = "offset2", @style = "width:60%; height: 25px;" })
                </li>
                <li style="list-style: none;">
                    @*@Html.LabelFor(m => m.Enquiry)*@
                    @Html.TextAreaFor(m => m.Enquiry, new { @placeholder = "Message or enquiry", @class = "offset2", @style = "width:60%;", @rows = "8" })
                </li>
                <li style="list-style: none;">
                    @Html.CheckBoxFor(m => m.SendToSelf, new { @class = "offset2", @style = "margin-top: -3px;" })<span style="display: inline; font-size: 12px; font-family: Gotham-Medium">&nbsp;&nbsp;Send a copy to yourself</span>
                </li>
            </ol>
            <script src="~/Scripts/placeholder.js"></script>
            &nbsp;&nbsp;<input type="submit" value="Submit" style="width: 100px!important;" class="offset2" />
        </fieldset>
    }

</div>

