@using IR_BackOffice.Objects
@model IEnumerable<IR_BackOffice_Data.LeagueCodes>

@{
    ViewBag.Title = "League Code Items";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>League Code Items</h2>
<span>
    <br />
    The league codes match up to their names. If a name is not matched the code will be displayed in the Live Scores feed.
    <br /><br />
</span>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @style = "color: blue; text-decoration: underline;" })
</p>
<table>
    <tr>
        <th style="text-align: center; padding: 0px 30px 0px 30px">League Code</th>
        <th style="text-align: center; padding: 0px 30px 0px 30px">Name / Description</th>
        <th colspan="3">Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.LeagueCode)
            </td>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td colspan="3" style="text-align: center;">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
